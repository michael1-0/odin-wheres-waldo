generator client {
  provider = "prisma-client"
  output   = "../src/db/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Score {
  id         String   @id @default(cuid())
  playerName String   @db.VarChar(24)
  elapsedMs  Int
  createdAt  DateTime @default(now())

  @@map("scores")
}
